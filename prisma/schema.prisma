generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum NotificationChannel {
  email
  sms
  push
}

enum GoalCategory {
  fitness
  nutrition
  mental_wellness
  sleep
  other
}

enum GoalCadence {
  daily
  weekly
  monthly
}

enum WellnessCategory {
  sleep
  nutrition
  activity
  mood
  stress
}

enum ResourceRelevance {
  foundational
  advanced
}

model User {
  id                  String              @id @default(uuid())
  name                String
  email               String              @unique
  timezone            String
  focusAreas          String[]
  notificationChannel NotificationChannel
  highLevelGoals      String[]
  goals               WellnessGoal[]
  wellnessInputs      WellnessInput[]
  milestones          ProgressMilestone[]
  insights            ProgressInsight[]
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
}

model WellnessGoal {
  id           String       @id @default(uuid())
  title        String
  category     GoalCategory
  targetMetric String
  targetValue  String
  cadence      GoalCadence
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model WellnessInput {
  id        String           @id @default(uuid())
  timestamp DateTime
  category  WellnessCategory
  summary   String
  metrics   Json
  notes     String?
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model ResourceArticle {
  id            String            @id @default(uuid())
  title         String
  summary       String
  url           String
  relevance     ResourceRelevance
  focusAreas    String[]
  tags          String[]
  safetyNotes   String?
  lastValidated DateTime?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model KnowledgeSource {
  id            String   @id @default(uuid())
  title         String
  type          String
  url           String
  lastValidated DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AuditLogEntry {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  actor     String
  action    String
  target    String
  notes     String?
}

model ProgressInsight {
  id               String   @id @default(uuid())
  week             String
  engagementScore  Int
  highlightedTrend String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  createdAt        DateTime @default(now())
}

model ProgressMilestone {
  id         String   @id @default(uuid())
  title      String
  achievedOn DateTime
  notes      String?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime @default(now())
}

model ProgressTip {
  id        String   @id @default(uuid())
  message   String
  category  String
  createdAt DateTime @default(now())
}
